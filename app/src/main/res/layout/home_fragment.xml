<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

        <LinearLayout
            android:id="@+id/genre_list_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/home_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lineto_circular_pro_bold"
                android:text="@string/home_screen"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/oldie_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lineto_circular_pro_book"
                android:paddingTop="30dp"
                android:text="Oldies but Goodies"
                android:textColor="#FF5252"
                android:textSize="@dimen/header_text_size" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/oldies_list"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/card_padding_top">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <com.example.musinity.CoverView
                            android:id="@+id/ragtime_cardview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="@dimen/card_corner_radius"
                            app:genre_name="@string/ragtime_title">

                            <ImageView
                                android:id="@+id/imageView"
                                android:layout_width="@dimen/image_size"
                                android:layout_height="@dimen/image_size"
                                android:background="#F4F4F4"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ragtime_cartoon" />
                        </com.example.musinity.CoverView>

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lineto_circular_pro_book"
                            android:text="@string/ragtime_title"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textSize="@dimen/genre_text_size" />

                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/classical_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lineto_circular_pro_book"
                android:paddingTop="14dp"
                android:text="@string/classical"
                android:textColor="#FF5252"
                android:textSize="@dimen/header_text_size" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/classical_list"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <com.example.musinity.CoverView
                            android:id="@+id/beethoven_cardview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="@dimen/card_corner_radius"
                            app:genre_name="@string/beethoven">

                            <ImageView
                                android:id="@+id/mozart_imageview"
                                android:layout_width="@dimen/image_size"
                                android:layout_height="@dimen/image_size"
                                android:background="#F4F4F4"
                                android:scaleType="centerCrop"
                                android:src="@drawable/beethoven" />
                        </com.example.musinity.CoverView>

                        <TextView
                            android:id="@+id/mozart_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lineto_circular_pro_book"
                            android:text="@string/beethoven"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textSize="@dimen/genre_text_size" />

                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/jazz_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lineto_circular_pro_book"
                android:paddingTop="14dp"
                android:text="Jazz"
                android:textColor="#FF5252"
                android:textSize="@dimen/header_text_size" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never">

                <LinearLayout
                    android:id="@+id/jazz_list"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingRight="@dimen/card_left">

                        <com.example.musinity.CoverView
                            android:id="@+id/louis_armstrong_cardview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="@dimen/card_corner_radius"
                            app:genre_name="@string/louis_armstrong">

                            <ImageView
                                android:layout_width="@dimen/image_size"
                                android:layout_height="@dimen/image_size"
                                android:background="#F4F4F4"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ragtime_cartoon" />
                        </com.example.musinity.CoverView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lineto_circular_pro_book"
                            android:text="@string/louis_armstrong"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textSize="@dimen/genre_text_size" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingRight="@dimen/card_left">

                        <com.example.musinity.CoverView
                            app:genre_name="@string/louis_armstrong"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="@dimen/card_corner_radius">

                            <ImageView
                                android:id="@+id/jazz_imageview"
                                android:layout_width="@dimen/image_size"
                                android:layout_height="@dimen/image_size"
                                android:background="#F4F4F4"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ragtime_cartoon" />
                        </com.example.musinity.CoverView>

                        <TextView
                            android:id="@+id/jazz_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lineto_circular_pro_book"
                            android:text="@string/ragtime_title"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textSize="@dimen/genre_text_size" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingRight="@dimen/card_left">

                        <com.example.musinity.CoverView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="@dimen/card_corner_radius"
                            app:genre_name="@string/louis_armstrong">

                            <ImageView
                                android:layout_width="@dimen/image_size"
                                android:layout_height="@dimen/image_size"
                                android:background="#F4F4F4"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ragtime_cartoon" />
                        </com.example.musinity.CoverView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lineto_circular_pro_book"
                            android:text="@string/louis_armstrong"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textSize="@dimen/genre_text_size" />

                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>
    </ScrollView>

</FrameLayout>